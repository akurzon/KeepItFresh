<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <AutoCompleteTextView
        android:id="@+id/edit_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:layout_weight="1"
        android:hint="@string/title_hint"/>

    <TextView
        android:id="@+id/detail_date_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/detail_date_header"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_weight="1"
        android:padding="@dimen/item_detail_padding"/>

    <!-- Try to find an underline for the above textview -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="2">

        <!--maybe get rid of these in favor of just displaying dates and assuming user will
            click to change-->
        <TextView
            android:id="@+id/edit_expiration_date_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/expiration_date"
            android:textSize="@dimen/item_detail_text_view_size"
            android:textStyle="bold"
            android:padding="@dimen/item_detail_padding"
            android:paddingEnd="16dp"/>

        <TextView
            android:id="@+id/expiration_date_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/item_detail_text_view_size"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="2">

        <!--maybe get rid of these in favor of just displaying dates and assuming user will
            click to change-->
        <TextView
            android:id="@+id/edit_purchase_date_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/purchase_date"
            android:textSize="@dimen/item_detail_text_view_size"
            android:textStyle="bold"
            android:padding="@dimen/item_detail_padding"
            android:paddingEnd="16dp"/>

        <TextView
            android:id="@+id/purchase_date_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/item_detail_text_view_size"/>

    </LinearLayout>

    <TextView
        android:id="@+id/detail_quantity_location_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/detail_details_header"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_weight="1"
        android:padding="@dimen/item_detail_padding"/>

    <!-- Try to find an underline for the above textview -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="2">

        <TextView
            android:id="@+id/edit_quantity_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quantity"
            android:textSize="@dimen/item_detail_text_view_size"
            android:textStyle="bold"
            android:padding="@dimen/item_detail_padding"
            android:paddingEnd="16dp"/>

        <TextView
            android:id="@+id/edit_item_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/item_detail_text_view_size"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="2">

        <TextView
            android:id="@+id/edit_location_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/location"
            android:textSize="@dimen/item_detail_text_view_size"
            android:padding="@dimen/item_detail_padding"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/item_location_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:gravity="bottom">

        <Button
            android:id="@+id/item_save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@color/colorAccent"
            android:layout_weight="1"
            android:text="@string/save"/>

        <Button
            android:id="@+id/item_detail_shopping_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@color/colorAccent"
            android:layout_weight="8"
            android:text="@string/item_detail_shopping"/>

        <Button
            android:id="@+id/item_detail_delete_button"
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@color/colorAccent"
            android:layout_weight="1"
            android:text="@string/button_delete_item"/>


    </LinearLayout>


</LinearLayout>